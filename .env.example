# Server Configuration
PORT=8080

# Logging Configuration
# Values: json (production) or console (development)
LOG_FORMAT=json

# Schema Configuration
SCHEMA_PATH=./schema.graphqls

# Authentication Configuration
# IMPORTANT: Generate a secure secret for production (minimum 32 characters)
# Example: openssl rand -base64 32
JWT_SECRET=your-secret-key-here-minimum-32-characters-recommended

# CORS Configuration
# Use * for all origins or specify comma-separated list
# Example: http://localhost:3000,https://app.example.com
CORS_ORIGINS=*

# MongoDB Configuration
# Connection string for MongoDB
MONGODB_URI=mongodb://localhost:27017

# Database name
MONGODB_DATABASE=air_dev

# Connection timeout (initial connection establishment)
# Range: 10s-60s, Default: 30s
MONGODB_TIMEOUT_CONNECT=30s

# Operation timeout (individual database operations)
# Range: 1s-30s, Default: 10s
MONGODB_TIMEOUT_OPERATION=10s

# Connection pool - minimum size
# Default: 5
MONGODB_POOL_MIN=5

# Connection pool - maximum size
# Range: 10-20 (per spec), Default: 20
MONGODB_POOL_MAX=20

# Connection idle timeout
# Default: 5m (5 minutes)
MONGODB_POOL_IDLE_TIMEOUT=5m

# Retry attempts (fixed per spec)
# Fixed value: 3
MONGODB_RETRY_ATTEMPTS=3

# Retry base delay
# Default: 1s
MONGODB_RETRY_BASE_DELAY=1s

# Retry max delay
# Default: 10s
MONGODB_RETRY_MAX_DELAY=10s
